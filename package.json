{
    "name": "moderaction",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "description": "Modern Forumactif moderation plugin (embedded script).",
    "scripts": {
        "build": "rollup -c",
        "dev": "concurrently -k \"rollup -c -w\" \"http-server dist -c-1\"",
        "serve": "http-server dist -p 8080 -c-1",
        "clean": "rimraf dist"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-node-resolve": "^15.2.0",
        "@rollup/plugin-typescript": "^11.1.6",
        "concurrently": "^9.0.0",
        "http-server": "^14.1.1",
        "rimraf": "^6.0.1",
        "rollup": "^4.18.0",
        "rollup-plugin-terser": "^7.0.2",
        "typescript": "^5.6.2"
    }
}
